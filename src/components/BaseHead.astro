---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import "../styles/global.css";
// If SITE_TITLE is used in your Layout.astro or other components, keep this import.
// Otherwise, it can be removed if not needed anywhere else in BaseHead's scope.
// import { SITE_TITLE } from '../consts';

interface Props {
  title: string;
  description?: string; // Made optional as we're providing a default
  image?: string;
}

// The canonical URL helps search engines identify the primary version of a page.
// It dynamically generates the clean URL for the current page.
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Destructure props, providing specific defaults for your "Mommy Time" site.
const {
  title,
  description = "Mommy Time: Your trusted companion for newborn feeding, nursing, and parenting tips.", // Default description for your site
  image = "/favicon.svg", // Default image for social media previews, using your favicon
} = Astro.props;
---

<!-- Global Metadata for your Mommy Time site -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<!-- Sitemap and RSS feed links are typically for blogs or large content sites.
     If not actively used for SEO or content syndication, they can be omitted. -->
<!-- <link rel="sitemap" href="/sitemap-index.xml" /> -->
<!-- <link rel="alternate" type="application/rss+xml" title={SITE_TITLE} href={new URL('rss.xml', Astro.site)} /> -->

<!-- The 'generator' meta tag identifies the software used to build the site (Astro in this case).
     This is standard practice and provides useful information for web crawlers and tools. -->
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL: Essential for SEO to prevent duplicate content issues. -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags: These define how your page appears in search results and browser tabs. -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook Meta Tags: Control how your page appears when shared on social media (e.g., Facebook, LinkedIn). -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />

<!-- Twitter Card Meta Tags: Control how your page appears when shared on Twitter. -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />

<!-- Google Fonts: Inter - Replaces local font preloads to eliminate warnings and use a common web font -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap"
  rel="stylesheet"
/>
