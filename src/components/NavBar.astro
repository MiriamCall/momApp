    {
      isAuthenticated && (
        <form
          action="/api/auth/signout"
          method="get"
          class="inline-block w-full"
        >
          {" "}
          {/* Added w-full to form */}
          <button
            type="submit"
            class="flex items-center gap-2 text-peach-600 px-4  rounded-full hover:bg-peach-100 transition duration-200  w-full justify-start"
