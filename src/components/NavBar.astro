    <a
      href="/about"
      class="flex items-center gap-2 text-peach-600 px-4 rounded-full hover:bg-peach-100 transition duration-200"
      role="menuitem"
      aria-label="About"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        fill="none"
        viewBox="0 0 24 24"
