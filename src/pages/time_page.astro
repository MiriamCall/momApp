---
import Timer from '../components/timer.astro';
import { db } from '/';

const timers = await db.select().from('FeedingTimer');
---
<main class="bg-pink-50 min-h-screen flex items-center justify-center px-4 py-10 font-sans">
  <div class="w-full max-w-2xl bg-white rounded-2xl shadow-lg p-8 text-center">
    <h1 class="text-3xl font-bold text-gray-700 mb-8">Feeding Timer</h1>
    <Timer timers ={timers} />
  </div>
</main>
